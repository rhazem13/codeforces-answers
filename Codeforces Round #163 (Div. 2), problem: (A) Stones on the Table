#include <iostream>
#include <string>
#include <cmath>
#include <algorithm>
using namespace std;
int main()
{
	int n,xd=0;
	cin >> n;
	char* arr = new char[n];
	for (int i = 0; i < n; i++) {
		cin >> arr[i];
	}
	for (int i = 0; i < n-1; i++) {
		if (arr[i] == arr[i + 1])
			xd += 1;
	}
	cout << xd;
}
